<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_1">

        <Preference
            android:title="@string/action_license"
            android:summary="@string/action_license_summary"
            android:key="license" />

        <Preference
            android:title="@string/action_changelog"
            android:summary="@string/action_changelog_summary"
            android:key="changelog" />

        <Preference
            android:title="@string/action_help"
            android:summary="@string/action_help_summary"
            android:key="help" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_2">

        <Preference
            android:title="@string/action_exercises"
            android:summary="@string/action_exercises_summary"
            android:key="nested"
            android:persistent="false" />

        <CheckBoxPreference
            android:title="@string/action_tts"
            android:summary="@string/action_tts_summary"
            android:key="tts"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:title="@string/action_beep"
            android:summary="@string/action_beep_summary"
            android:key="beep"
            android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>
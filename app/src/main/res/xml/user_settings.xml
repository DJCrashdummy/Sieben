<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_2">

        <CheckBoxPreference
            android:title="@string/action_tts"
            android:icon="@drawable/volume_high"
            android:summary="@string/action_tts_summary"
            android:key="tts"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:title="@string/action_beep"
            android:icon="@drawable/bell_ring"
            android:summary="@string/action_beep_summary"
            android:key="beep"
            android:defaultValue="true" />

        <Preference
            android:title="@string/action_duration"
            android:icon="@drawable/timer_sand"
            android:summary=""
            android:key="duration" />

        <Preference
            android:title="@string/action_duration2"
            android:icon="@drawable/sleep"
            android:summary=""
            android:key="duration2" />

        <Preference
            android:title="@string/action_exercises"
            android:icon="@drawable/walk"
            android:summary="@string/action_exercises_summary"
            android:key="exercises" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_3">

        <CheckBoxPreference
            android:title="@string/action_endless"
            android:icon="@drawable/repeat"
            android:summary="@string/action_endless_summary"
            android:key="endless"
            android:defaultValue="false" />

        <Preference
            android:title="@string/action_durationEx"
            android:icon="@drawable/timer"
            android:summary="@string/action_durationEx_summary"
            android:key="exercises_duration" />

        <Preference
            android:title="@string/action_stat"
            android:icon="@drawable/chart_bar"
            android:summary="@string/action_stat_summary"
            android:key="stat" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_1">

        <Preference
            android:title="@string/action_intro"
            android:icon="@drawable/information_outline"
            android:summary="@string/action_intro_summary"
            android:key="help" />

        <Preference
            android:title="@string/action_license"
            android:icon="@drawable/copyright"
            android:summary="@string/action_license_summary"
            android:key="license" />

        <Preference
            android:title="@string/action_changelog"
            android:icon="@drawable/format_list_bulleted"
            android:summary="@string/action_changelog_summary"
            android:key="changelog" />

        <Preference
            android:title="@string/action_donate"
            android:icon="@drawable/coin"
            android:summary="@string/action_donate_summary"
            android:key="donate" />

    </PreferenceCategory>


</PreferenceScreen>